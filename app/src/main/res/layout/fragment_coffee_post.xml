<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <percolatechallenge.eileenyau.coffee.commons.widgets.FontTextView
        android:id="@+id/entry_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/c1"
        android:textSize="@dimen/entry_name_textsize_large"
        app:fontName="roboto_light" />

    <percolatechallenge.eileenyau.coffee.commons.widgets.FontTextView
        android:id="@+id/entry_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/c2"
        android:textSize="@dimen/entry_description_textsize_large"
        app:fontName="roboto_light" />

    <ImageView
        android:id="@+id/entry_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <percolatechallenge.eileenyau.coffee.commons.widgets.FontTextView
        android:id="@+id/entry_time_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/c2"
        android:textSize="@dimen/entry_time_updated_textsize"
        app:fontName="roboto_light_italic" />
</LinearLayout>
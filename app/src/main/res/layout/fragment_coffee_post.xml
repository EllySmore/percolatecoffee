<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <percolatechallenge.eileenyau.coffee.commons.widgets.TypefacedTextView
        android:id="@+id/entry_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dark_gray_divider"
        android:text="ENTRY NAME"
        android:textSize="18sp" />

    <percolatechallenge.eileenyau.coffee.commons.widgets.TypefacedTextView
        android:id="@+id/entry_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ENTRY DESCRIPTION"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/entry_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@android:drawable/ic_menu_gallery" />
</LinearLayout>